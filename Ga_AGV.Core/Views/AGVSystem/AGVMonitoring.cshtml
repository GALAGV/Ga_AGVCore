                    ctx.fillStyle = "#FF7F00";
                    ctx.textAlign = 'center';
                    ctx.textBaseline = 'middle';
                    ctx.fillText(ar[i].qrInfo, ar[i].qrX, ar[i].qrY);
                    //console.log(ar[i].qrInfo);

                }
            }
