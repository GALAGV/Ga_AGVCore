
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户登录</title>
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- 可选的 Bootstrap 主题文件（一般不用引入） -->
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <script src="~/Scripts/jquery-3.2.1.min.js"></script>

    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <style type="text/css">
        * {
            margin: 0px;
            padding: 0px;
            list-style: none;
            border: 0px;
            text-decoration: none;
        }

        .main-bg {
            width: 100%;
            height: 100%;
            position: fixed;
            z-index: -1;
            margin-top: 0px;
        }

        .main-bg img {
            width: 100%;
            height: 100%;
        }

        .main-top {
            width: 100%;
            height: 150px;
            /*margin-top: 40px;*/
            line-height: 150px;
            text-align: center;
        }

        .main-middle {
            width: 100%;
            height: 100px;
            /*margin-top: 10px;*/
            line-height: 100px;
            font-size: 60px;
            text-align: center;
            font-family: "微软雅黑";
            font-weight: bold;
        }

        .main-middle-count {
            height: 100px;
            width: 600px;
            margin: 0px auto;
            line-height: 100px;
        }

        .main-centre {
            width: 100%;
            height: 400px;
        }

        .main-centre-count {
            width: 550px;
            height: 300px;
            margin: 0px auto;
            background-color: #808080;
            /*opacity:0.4;*/
            margin-top: 60px;
            border-radius: 2%;
            -moz-box-shadow: 3px 3px 8px #333333;
            -webkit-box-shadow: 3px 3px 8px #333333;
            box-shadow: 3px 3px 8px #333333;
        }

        .main-centre-count ul {
            height: 300px;
        }

        .main-centre-count ul li {
            height: 100px;
            line-height: 100px;
            position: relative;
            display: block;
            text-align: center;
        }

        .main-centre-count ul li input {
            position: absolute;
            top: 30px;
            left: 60px;
            width: 450px;
            margin: 0px auto;
        }

        .main-bottom {
            text-align: center;
            height: 50px;
            line-height: 50px;
            font-size: 18px;
            font-weight: bold;
            color: #8a8888;
            margin-top: 50px;
        }

        .main-group {
            width: 400px;
            margin: 0px auto;
            height: 80px;
            line-height: 400px;
        }

        .main-form {
            width: 400px;
            margin: 0px auto;
            height: 80px;
        }
    </style>
</head>
<body>
    <div>
        <div class="main-bg">
            <img src="~/image/bg.png" />
        </div>
        <div class="main-count">
            <div class="main-top">
                <img src="~/image/logo.png" />
            </div>
            <div class="main-middle">
                <div class="main-middle-count">AGV智能调度系统</div>
            </div>
            <div class="main-centre ">
                <div class="main-centre-count" style="padding-top:60px;">
                    <form action="~/Home/Main">
                        <div class="form-group main-group">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                                <input type="text" class="form-control" placeholder="请输入账号" aria-describedby="basic-addon1">
                            </div>
                        </div>
                        <div class="form-group main-group">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon2"><span class="glyphicon glyphicon-lock"></span></span>
                                <input type="password" class="form-control" placeholder="请输入密码" aria-describedby="basic-addon2">
                            </div>
                        </div>
                        <div class="form-group main-form">
                            <div class="input-group">
                                <button style="width:400px;background-color: #ffba19;color:white;font-weight:bold" class="btn btn-login" type="submit">登&nbsp;录</button>
                            </div>
                        </div>
                        <div class="main-bottom"><p>Copyright ©
                        <script>document.write((new Date()).getFullYear());</script>  Galaxis</p></div>
                    </form>
                </div>
            </div>
          
        </div>
    </div>
</body>
</html>
