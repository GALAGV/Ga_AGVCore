    <script>
        $(function () {

            $("#external-frame").height($(window).height()-100);

            CirculationTimes();

            setInterval(function () {
                CirculationTimes();
                msg();
            }, 1000);
            setInterval(function () { 
                msg();
            }, 500);

            function CirculationTimes() {

                var year = new Date().getFullYear();
                var m = new Date().getMonth();
                var d = new Date().getDate();

                var hours = new Date().getHours();
                var minutes = new Date().getMinutes();
                var seconds = new Date().getSeconds();
                if (hours < 10) {
                    hours = '0' + hours;
                }
                if (minutes < 10) {
                    minutes = '0' + minutes;
                }
                if (seconds < 10) {
                    seconds = '0' + seconds;
                }
                $('#date').text("日期：" + year + "-" + m + "-" + d);
                $('#time').text("时间：" + hours + ":" + minutes + ":" + seconds);
            }

            function msg() {
                $('.msg').toggleClass('animated fadeIn');
            }
        });

        window.onresize = function () {
            $("#external-frame").height($(window).height() - 100);
        }  
    </script>
